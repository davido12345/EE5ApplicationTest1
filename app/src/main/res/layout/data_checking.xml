<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Driver_mainpage">

 <TextView
     android:id="@+id/Data_checking"
     android:layout_width="wrap_content"
     android:layout_height="70dp"
     android:text="Data Checking"
     android:textSize="30dp"
     android:gravity="center"
     android:layout_centerHorizontal="true"
     android:layout_marginTop="20dp"
     />

    <TextView
        android:id="@+id/Session_choose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:layout_marginLeft="90dp"
        android:text="Session"
        android:textSize="25dp"
        />


<Spinner
    android:id="@+id/Session_Spinner"
    android:layout_width="50dp"
    android:layout_height="20dp"
    android:layout_marginTop="130dp"
    android:layout_toRightOf="@+id/Session_choose"
    >
</Spinner>

    <TextView
        android:id="@+id/ID_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Session_choose"
        android:text="ID Number"
        android:layout_marginLeft="90dp"
        android:textSize="25dp" />

    <EditText
        android:id="@+id/ID_choose"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_toRightOf="@+id/ID_name"
        android:textSize="20dp"
        android:singleLine="true"
        android:ems="5"
        android:layout_below="@+id/Session_Spinner"
        />

    <ListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="307dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>